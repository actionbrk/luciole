<WatchFace height="450" width="450">
    <Metadata key="CLOCK_TYPE" value="DIGITAL" />

    <UserConfigurations>
        <BooleanConfiguration
            id="use_gyro"
            displayName="use_gyro"
            defaultValue="FALSE" />
        <ColorConfiguration id="themeColor" defaultValue="0"
            displayName="color_selector_display_name">
            <ColorOption id="0" displayName="color_theme_0" colors="#EEFAFD47"/>
            <ColorOption id="1" displayName="color_theme_1" colors="#a9c01c"/>
            <ColorOption id="2" displayName="color_theme_2" colors="#bec125"/>
            <ColorOption id="3" displayName="color_theme_3" colors="#ffff7a"/>
        </ColorConfiguration>
    </UserConfigurations>

    <Scene>
        <PartText x="225" y="225" width="225" height="225">
            <Variant mode="AMBIENT" target="alpha" value="128" />
            <TextCircular centerX="0" centerY="0" width="415" height="415"
                startAngle="180" endAngle="90" direction="COUNTER_CLOCKWISE">
                <Font family="susemono" size="28" color="[CONFIGURATION.themeColor]">
                    <Template>
                        <![CDATA[%s %d %s]]>
                        <Parameter expression="[DAY_OF_WEEK_S]" />
                        <Parameter expression="[DAY]" />
                        <Parameter expression="[MONTH_S]" />
                    </Template>
                </Font>
            </TextCircular>
        </PartText>

        <DigitalClock height="450" width="450" x="0" y="0">
            <TimeText format="hh" height="150" width="150" x="50" y="150">
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Font color="#ffffffff" family="susemono" size="100" />
            </TimeText>
            <TimeText format="mm" height="150" width="150" x="250" y="150">
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Font color="#ffffffff" family="susemono" size="100" />
            </TimeText>

            <TimeText alpha="0" format="hh" height="150" width="150" x="50" y="150">
                <Variant mode="AMBIENT" target="alpha" value="255" />
                <Font color="#ffffffff" family="susemono" size="100" weight="ULTRA_LIGHT" />
            </TimeText>
            <TimeText alpha="0" format="mm" height="150" width="150" x="250" y="150">
                <Variant mode="AMBIENT" target="alpha" value="255" />
                <Font color="#ffffffff" family="susemono" size="100" weight="ULTRA_LIGHT" />
            </TimeText>
        </DigitalClock>

        <Condition>
            <Expressions>
                <Expression name="show_gyro"><![CDATA[([UNREAD_NOTIFICATION_COUNT] > -1) && [CONFIGURATION.use_gyro] == "TRUE"]]></Expression>
                <Expression name="show_static"><![CDATA[([UNREAD_NOTIFICATION_COUNT] > -1) && [CONFIGURATION.use_gyro] == "FALSE"]]></Expression>
            </Expressions>

            <Compare expression="show_static">
                <PartDraw height="16" width="16" x="217" y="217">
                    <Variant mode="AMBIENT" target="alpha" value="180" />
                    <Ellipse height="16" width="16" x="0" y="0">
                        <Fill color="[CONFIGURATION.themeColor]" />
                    </Ellipse>
                </PartDraw>
            </Compare>

            <Compare expression="show_gyro">
                <PartDraw height="16" width="16" x="217" y="217">
                    <Variant mode="AMBIENT" target="alpha" value="180" />
                    <Gyro x="[ACCELEROMETER_ANGLE_X] * 0.1" y="[ACCELEROMETER_ANGLE_Y] * 0.1"
                        scaleX="1.0 + ([ACCELEROMETER_ANGLE_Z] * 0.005)"
                        scaleY="1.0 + ([ACCELEROMETER_ANGLE_Z] * 0.005)" />
                    <Ellipse height="16" width="16" x="0" y="0">
                        <Fill color="[CONFIGURATION.themeColor]" />
                    </Ellipse>
                </PartDraw>
            </Compare>

        </Condition>

    </Scene>
</WatchFace>