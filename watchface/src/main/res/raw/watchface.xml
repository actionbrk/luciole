<WatchFace height="450" width="450">
    <Metadata key="CLOCK_TYPE" value="DIGITAL" />

    <UserConfigurations>
        <BooleanConfiguration
            id="use_gyro"
            displayName="use_gyro"
            defaultValue="FALSE" />
        <ColorConfiguration id="themeColor" defaultValue="0"
            displayName="color_selector_display_name">
            <ColorOption id="0" displayName="color_theme_0" colors="#EEFAFD47 #ffffffff #B4B4B4"/>
            <ColorOption id="1" displayName="color_theme_1" colors="#a9c01c #ffffffff #B4B4B4"/>
            <ColorOption id="2" displayName="color_theme_2" colors="#bec125 #ffffffff #B4B4B4"/>
            <ColorOption id="3" displayName="color_theme_3" colors="#ffff7a #ffffffff #B4B4B4"/>
        </ColorConfiguration>
        <ListConfiguration
            id="date_position"
            displayName="date_position"
            defaultValue="0"
            icon="calendar">
            <ListOption id="0" displayName="date_position_bottom_right" icon="bottom_right"/>
            <ListOption id="1" displayName="date_position_top" icon="up"/>
        </ListConfiguration>
    </UserConfigurations>

    <Scene>
        <ComplicationSlot
            slotId="0"
            x="0" y="0"
            width="450" height="450"
            supportedTypes="SHORT_TEXT EMPTY"
            isCustomizable="TRUE">
            <BoundingArc
                centerX="225" centerY="225"
                width="450" height="450"
                startAngle="290" endAngle="340"
                thickness="40"
                direction="CLOCKWISE"
                outlinePadding="0"
                isRoundEdge="TRUE"/>
            <DefaultProviderPolicy
                defaultSystemProvider="EMPTY"
                defaultSystemProviderType="EMPTY" />

            <Complication type="SHORT_TEXT">
                <PartText x="0" y="0" width="400" height="400" tintColor="[CONFIGURATION.themeColor.2]">
                    <Variant mode="AMBIENT" target="alpha" value="0" />
                    <TextCircular
                        centerX="225" centerY="225"
                        width="415" height="415"
                        startAngle="320" endAngle="350"
                        align="START"
                        direction="CLOCKWISE"
                        ellipsis="TRUE">
                        <Font family="susemono" size="28" weight="SEMI_BOLD">
                            <Template><![CDATA[%s]]><Parameter expression="[COMPLICATION.TEXT]" /></Template>
                        </Font>
                    </TextCircular>
                </PartText>
                <!-- Because <InlineImage> does not work with [COMPLICATION.MONOCHROMATIC_IMAGE]-->
                <PartImage x="70" y="63" width="24" height="24" angle="319" tintColor="[CONFIGURATION.themeColor.2]">
                    <Variant mode="AMBIENT" target="alpha" value="0" />
                    <Transform
                        target="tintColor"
                        value="[UNREAD_NOTIFICATION_COUNT] > 0 ? [CONFIGURATION.themeColor.0] : [CONFIGURATION.themeColor.2]" />
<!--                    <Image resource="heart"/>-->
                    <Image resource="[COMPLICATION.MONOCHROMATIC_IMAGE]" />
                </PartImage>
            </Complication>
        </ComplicationSlot>

        <!-- ... (Reste de la Scene : Date, DigitalClock, etc.) ... -->
        <ListConfiguration id="date_position">
            <!-- DATE: bottom-right -->
            <ListOption id="0">
                <PartText x="0" y="0" width="450" height="450" tintColor="[CONFIGURATION.themeColor.2]">
                    <Variant mode="AMBIENT" target="alpha" value="0" />
                    <Transform
                        target="tintColor"
                        value="[UNREAD_NOTIFICATION_COUNT] > 0 ? [CONFIGURATION.themeColor.0] : [CONFIGURATION.themeColor.2]" />
                    <TextCircular
                        centerX="225" centerY="225"
                        width="415" height="415"
                        startAngle="180" endAngle="90"
                        direction="COUNTER_CLOCKWISE">
                        <Font family="suse" size="28" weight="SEMI_BOLD" letterSpacing="0.05">
                            <Template>
                                <![CDATA[%s %s/%s]]>
                                <Parameter expression="subText([DAY_OF_WEEK_S], 0, 3)" />
                                <Parameter expression="[DAY]" />
                                <Parameter expression="[MONTH]" />
                            </Template>
                        </Font>
                    </TextCircular>
                </PartText>
            </ListOption>
            <!-- DATE: top -->
            <ListOption id="1">
                <PartText x="0" y="0" width="450" height="450" tintColor="[CONFIGURATION.themeColor.2]">
                    <Variant mode="AMBIENT" target="alpha" value="0" />
                    <Transform
                        target="tintColor"
                        value="[UNREAD_NOTIFICATION_COUNT] > 0 ? [CONFIGURATION.themeColor.0] : [CONFIGURATION.themeColor.2]" />
                    <TextCircular
                        centerX="225" centerY="225"
                        width="415" height="415"
                        startAngle="315" endAngle="45"
                        direction="CLOCKWISE">
                        <Font family="susemono" size="28" weight="SEMI_BOLD" letterSpacing="0.05">
                            <Template>
                                <![CDATA[%s %s/%s]]>
                                <Parameter expression="subText([DAY_OF_WEEK_S], 0, 3)" />
                                <Parameter expression="[DAY]" />
                                <Parameter expression="[MONTH]" />
                            </Template>
                        </Font>
                    </TextCircular>
                </PartText>
            </ListOption>
        </ListConfiguration>

        <DigitalClock height="450" width="450" x="0" y="0">
            <TimeText format="hh" height="150" width="150" x="50" y="150">
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Font color="[CONFIGURATION.themeColor.1]" family="susemono" size="100" />
            </TimeText>
            <TimeText format="mm" height="150" width="150" x="250" y="150">
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Font color="[CONFIGURATION.themeColor.1]" family="susemono" size="100" />
            </TimeText>

            <TimeText alpha="0" format="hh" height="150" width="150" x="50" y="150">
                <Variant mode="AMBIENT" target="alpha" value="180" />
                <Font color="[CONFIGURATION.themeColor.1]" family="susemono" size="100" weight="ULTRA_LIGHT" />
            </TimeText>
            <TimeText alpha="0" format="mm" height="150" width="150" x="250" y="150">
                <Variant mode="AMBIENT" target="alpha" value="180" />
                <Font color="[CONFIGURATION.themeColor.1]" family="susemono" size="100" weight="ULTRA_LIGHT" />
            </TimeText>
        </DigitalClock>

        <Condition>
            <Expressions>
                <Expression name="show_gyro"><![CDATA[([UNREAD_NOTIFICATION_COUNT] > 0) && [CONFIGURATION.use_gyro] == "TRUE"]]></Expression>
                <Expression name="show_static"><![CDATA[([UNREAD_NOTIFICATION_COUNT] > 0) && [CONFIGURATION.use_gyro] == "FALSE"]]></Expression>
            </Expressions>

            <Compare expression="show_static">
                <PartDraw height="16" width="16" x="217" y="217">
                    <Variant mode="AMBIENT" target="alpha" value="180" />
                    <Ellipse height="16" width="16" x="0" y="0">
                        <Fill color="[CONFIGURATION.themeColor.0]" />
                    </Ellipse>
                </PartDraw>
            </Compare>

            <Compare expression="show_gyro">
                <PartDraw height="16" width="16" x="217" y="217">
                    <Variant mode="AMBIENT" target="alpha" value="180" />
                    <Gyro x="[ACCELEROMETER_ANGLE_X] * 0.1" y="[ACCELEROMETER_ANGLE_Y] * 0.1"
                        scaleX="1.0 + ([ACCELEROMETER_ANGLE_Z] * 0.005)"
                        scaleY="1.0 + ([ACCELEROMETER_ANGLE_Z] * 0.005)" />
                    <Ellipse height="16" width="16" x="0" y="0">
                        <Fill color="[CONFIGURATION.themeColor.0]" />
                    </Ellipse>
                </PartDraw>
            </Compare>
        </Condition>
    </Scene>
</WatchFace>